{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://yuga-backend.up.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "env": {
    "VITE_API_URL": "https://yuga-backend.up.railway.app"
  }
}
